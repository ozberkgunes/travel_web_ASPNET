
<div class="content-form">
    <h3>Yorum Yazmak İçin</h3>
    <form method="post">

        <input type="hidden" name="BlogId" value="@ViewBag.deger" />
        <input type="text" placeholder="Kullanıcı Adı" name="KullaniciAdi" required />
        <input type="text" placeholder="Email" name="Mail" required />
        <textarea placeholder="Yorum" name="Yorum"></textarea>
        <button class="btn btn-success" onclick="return confirm ('Yorumunuzu göndermek istediğinizden emin misiniz ?');">Kaydet</button>
    </form>
    

</div>