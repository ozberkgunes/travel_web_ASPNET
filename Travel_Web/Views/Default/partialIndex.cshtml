@using travel_web.Models.DAL
@model List<Blog>
<div class="con-bot">

    @foreach (var item in Model)
    {
        int count = 0;
        if (count != 0)
        {
            <div class="left">
                <div class="bot-left">
                    <img src="@item.BlogImage" alt="" />
                </div>
                <div class="left-text">
                    <h4>@item.Baslik</h4>
                    <span class="doller">@Convert.ToDateTime(item.Tarih).ToString("dd/MM/yyyy")</span>
                    <p>@item.Aciklama.Substring(0, 50)</p>
                    <p><a href="/Blog/BlogDetay/@item.Id"><span class="read">Devamı >></span></a></p>
                </div>
            </div>
        }
        else
        {
            <div class="right">
                <div class="bot-left">
                    <img src="@item.BlogImage"  alt="" />
                </div>
                <div class="left-text">
                    <h4>@item.Baslik</h4>
                    <span class="doller"> @Convert.ToDateTime(item.Tarih).ToString("dd/MM/yyyy")</span>
                    <p>@item.Aciklama.Substring(0, 50)</p>
                    <p><a href="/Blog/BlogDetay/@item.Id"><span class="read">Devamı >></span></a></p>
                </div>
            </div>
        }


    }
</div>