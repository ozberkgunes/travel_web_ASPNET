@using travel_web.Models.DAL
@model List<Blog>


<div class="padding">
    <h4>This Week's Top 10</h4>
    <ul class="list list-pad">
        @{ int counter = 1;}
        @foreach (var item in Model)
        {
            <li class="list-bg1"><span>@counter </span><a href="/Blog/BlogDetay/@item.Id">@item.Baslik</a></li>
            counter++;
        }
    </ul>
    <a href="/Blog/Index" class="link1">Tüm Yazılar için...</a>
</div>
